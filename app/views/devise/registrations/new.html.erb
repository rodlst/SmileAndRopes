<body class="connect">
<h1>SMILE</h1>


<div class="sign_up_page_body">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :Email %><br />
    <%= f.email_field :email, autofocus: true, placeholder: 'Email', style: 'text-align: center' class: 'champs' %>
  </div>

  <div class="field">
    <%= f.label :Mot_de_passe %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> charact√®res minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", placeholder: 'Mot de passe', style: 'text-align: center' class: 'champs' %>
  </div>

  <div class="field">
    <%= f.label :Confirmez_votre_mot_de_passe %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Confirmation', style: 'text-align: center' class: 'champs' %>
  </div>
</div>

  <div class="actions">
    <%= f.submit "S'inscrire" %>
  </div>
<% end %>

<div class="down_links"><%= render "devise/shared/links" %></div>
</div>
